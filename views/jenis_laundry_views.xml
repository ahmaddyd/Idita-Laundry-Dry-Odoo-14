<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="jenis_laundry_view_tree" model="ir.ui.view">
            <field name="name">Jenis Laundry</field>
            <field name="model">idita.jenis_laundry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tipe"/>
                    <field name="size"/>
                    <field name="teknik_id"/>
                    <field name="active"/>
                    <field name="harga"/>
                </tree>
            </field>
        </record>

        <record id="jenis_laundry_view_form" model="ir.ui.view">
            <field name="name">Form Jenis Laundry</field>
            <field name="model">idita.jenis_laundry</field>
            <field name="arch" type="xml">
                <form string="Daftar Harga Cucian">
                    <sheet>
                        <group>
                            <group colspan='4'>
                                <group colspan='2'>
                                    <separator string="JENIS CUCI"/>
                                    <field name="name"/>
                                    <field name="size"/>
                                </group>
                                <group colspan='2'>
                                    <separator string="JENIS BAHAN"/>
                                    <field name="tipe"/>
                                    <field name="teknik_id"/>
                                </group>
                                <notebook colspan='4'>
                                    <page string="DESKRIPSI BAHAN">
                                        <field name="deskripsi"/>
                                    </page>
                                    <page string="DESKRIPSI PENCUCIAN">
                                        <field name="teknik_pencucian"/>
                                    </page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="jenis_laundry_view_search" model="ir.ui.view">
            <field name="name">Search Jenis Laundry</field>
            <field name="model">idita.jenis_laundry</field>
            <field name="arch" type="xml">
                <search string="Pencarian">
                    <field name="name"/>
                    <field name="tipe"/>
                    <filter name="katun" string="Katun" domain="[('tipe', 'ilike', 'katun')]"/>
                    <filter name="kulit" string="Kulit" domain="[('tipe', 'ilike', 'kulit')]"/>
                </search>
            </field>
        </record>
        >
        <record id="jenis_laundry_action" model="ir.actions.act_window">
            <field name="name">Jenis Laundry and Dry Idita</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">idita.jenis_laundry</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_smiling_face">
                    Diisi dengan daftar bahan cucian dan harga
                </p>
                <p>
                </p>
            </field>
        </record>

        <menuitem id="jenis_laundry_menu_act"
                  name="Bahan Cucian"
                  parent="laundry_master_menu_categ"
                  action="jenis_laundry_action"
                  sequence="10"/>
    </data>
</odoo>